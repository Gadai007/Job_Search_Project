
<div class="container">
    <div class="row">
    <div class="col">
    <h1>Add job</h1>
    <h3>{{error}}</h3>
    <form class="col s12 white z-depth-3 form" action="/gigs/add" method="POST">
      <br>
      <div class="row">
        <div class="input-field col s6">
          <textarea name="title" placeholder="web-developer" id="title" type="text" class="materialize-textarea">{{title}}</textarea>
          <label for="title">Title</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <textarea name="technologies" placeholder="javascript, python" id="technologies" type="text" class="materialize-textarea" >{{technologies}}</textarea>
          <label for="technologies">Technologies</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input name="budget" placeholder="how much you want to pay"  id="budget" type="text" class="validate" value={{budget}}>
          <label for="budget">Budget</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <textarea name="description" placeholder="describe the job profile" data-length="150" id="description" class="materialize-textarea">{{description}}</textarea>
          <label for="description">Description</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <textarea name="email" placeholder="your email id" id="email" type="email" class="materialize-textarea">{{email}}</textarea>
          <label for="email">Email</label>
        </div>
      </div>
      <div>
        <button class="btn waves-effect waves-light" type="submit" name="action">Submit
        <i class="material-icons right">send</i>
        </button>
      </div>
      <br>
    </form>
    </div>
    </div>
</div>