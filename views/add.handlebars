
<div class="container">
    <div class="row">
    <div class="col">
    <h1>Add jobs</h1>

    <form class="col s12" action="/gigs/add" method="POST">
      <div class="row">
        <div class="input-field col s6">
          <input placeholder="eg. react developer, data scientist" id="title" type="text" class="validate">
          <label for="title">Title</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input placeholder="eg. javascript, python" id="technologies" type="text" class="validate">
          <label for="technologies">Technologies Needed</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input placeholder="how much you want to pay"  id="budget" type="text" class="validate">
          <label for="budget">Budget</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <textarea placeholder="describe the job profile" data-length="120" id="description" class="materialize-textarea"></textarea>
          <label for="description">Description</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input placeholder="your email id" id="email" type="email" class="validate">
          <label for="email">Email</label>
        </div>
      </div>
      <div>
        <button class="btn waves-effect waves-light" type="submit" name="action">Submit
        <i class="material-icons right">send</i>
        </button>
      </div>
    </form>
    </div>
    </div>
</div>